{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "The Virtual Forge Shopping API",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "List all products",
        "operationId": "getAll",
        "tags": ["products"],
        "parameters": [
          {
            "name": "orderByTitle",
            "in": "query",
            "description": "Order by title",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "orderByPrice",
            "in": "query",
            "description": "Order by price",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "An array of products",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Products"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/baskets/{basketId}": {
      "get": {
        "summary": "Get basket content",
        "operationId": "getBasket",
        "tags": ["basket"],
        "parameters": [
          {
            "name": "basketId",
            "in": "path",
            "required": true,
            "description": "The id of the basket to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Basket content",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Basket"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add product to the basket",
        "operationId": "addProduct",
        "tags": ["basket"],
        "parameters": [
          {
            "name": "basketId",
            "in": "path",
            "required": true,
            "description": "The id of the basket to be added the product",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasketItem"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Basket content",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Basket"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Remove product from the basket",
        "operationId": "removeProduct",
        "tags": ["basket"],
        "parameters": [
          {
            "name": "basketId",
            "in": "path",
            "required": true,
            "description": "The id of the basket to be added the product",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasketItem"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Basket content",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Basket"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "variants": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Variant"
            }
          }
        }
      },
      "Products": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Product"
        }
      },
      "Variant": {
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "price": {
            "type": "string"
          }
        }
      },
      "Variants": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Variant"
        }
      },
      "BasketItem": {
        "required": ["productId, variantId, count"],
        "properties": {
          "productId": {
            "type": "integer",
            "format": "int64"
          },
          "variantId": {
            "type": "integer",
            "format": "int64"
          },
          "count": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Basket": {
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BasketItem"
            }
          },
          "totalPrice": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "Error": {
        "required": ["code", "message"],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
